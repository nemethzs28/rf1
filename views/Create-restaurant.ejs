<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>WebPincér</title>
    <link rel="stylesheet" type="text/css" href="/style/allStyle.css">
    <link rel="icon" href="/assets/icon_restaurant.png">
    <script type="text/javascript" src="/scripts/indexDB.js"></script>
    <script type="text/javascript" src="/scripts/main.js"></script>
    <script type="text/javascript" src="/scripts/floatingLabel.js"></script>
</head>
<body>
<div class="mainPageContainer">
    <div class="mainPage">
        <div class="mainPageHeaderContainer">
            <div class="header">
                <a href="/" style="text-decoration: none">
                    <div class="mainTitle">WebPincér</div>
                </a>
                <div style="display: flex;align-self: center;">
                    <a href="/profile" style="text-decoration: none" class="aContainerProfilePic">
                        <div class="profileIcon"></div>
                    </a>
                    <a href="/shoppingCart" style="text-decoration: none" class="aContainerCartPic">
                        <div id="Cart" class="shoppingCartIcon smthInCart"></div>
                    </a>
                </div>
            </div>

            <div class="menu">
                <%if (sess.email) {%>
                    <a href="/signout" style="text-decoration: none">
                        <div class="login">Kijelentkezés</div>
                    </a>
                <% } else {%>
                    <a href="/login" style="text-decoration: none">
                        <div class="login">Bejelentkezés</div>
                    </a>
                <% } %>
                <a href="/registration" style="text-decoration: none">
                    <div class="registration">Regisztráció</div>
                </a>
                <a href="/connection" style="text-decoration: none">
                    <div class="connection">Kapcsolat</div>
                </a>
            </div>
        </div>
        <div class="regPageMainBody">
            <a href="/admin">
                <div class="backTo backArrow"></div>
            </a>
            <div class="regFormDiv">
                <h2 class="pageMainTitle regTitle">Étterem Létrehozása</h2>
                <form method="post" class="regForm" action="/add">
                    <div class="main">
                        <input type="text" name="restaurantName" id="restaurantName" onchange="checkValue(this)" onfocus="this.placeholder = 'string'" onblur="this.placeholder=''" placeholder required/>
                        <label class="hello"> Étterem név</label>
                        <span class="enter"></span>
                    </div>
                    <div class="main">
                        <input type="text" name="priceCategory" id="pricteCategory" onchange="checkValue(this)" onfocus="this.placeholder = 'string'" onblur="this.placeholder=''" placeholder required/>
                        <label class="hello"> Árkategória</label>
                        <span class="enter"></span>
                    </div>
                    <div class="main">
                        <input type="text" name="description" id="description" onchange="checkValue(this)" onfocus="this.placeholder = 'string'" onblur="this.placeholder=''" placeholder required/>
                        <label class="hello"> Leírás</label>
                        <span class="enter"></span>
                    </div>
                    <div class="main">
                        <input type="text" name="rating" id="rating" onchange="checkValue(this)" onfocus="this.placeholder = 'pl. (4.5 / 5), a számláló float'" onblur="this.placeholder=''" placeholder required/>
                        <label class="hello"> Értekelés</label>
                        <span class="enter"></span>
                    </div>
                    <div class="main">
                        <input type="text" name="image" id="image" onchange="checkValue(this)" onfocus="this.placeholder = 'string (path/name.png)'" onblur="this.placeholder=''" placeholder required/>
                        <label class="hello"> Kép</label>
                        <span class="enter"></span>
                    </div>
                    <div style="display: flex; justify-content: center;">
                            <button class="regButton createButton" type="submit" name="registration">Étterem Létrehozása</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</body>
</html>
